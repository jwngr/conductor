{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/pwa": {
      "entry": ["src/index.tsx", "index.html"],
      "project": "src/**/*.{ts,tsx,js,jsx}",
      "ignoreDependencies": []
    },
    "packages/extension": {
      "entry": ["src/index.tsx", "src/background.ts"],
      "project": "src/**/*.{ts,tsx,js,jsx}",
      "ignoreDependencies": ["@types/chrome"]
    },
    "packages/functions": {
      "entry": ["src/index.ts"],
      "project": "src/**/*.{ts,js}",
      "ignoreDependencies": []
    },
    "packages/rssServer": {
      "entry": ["src/server.ts"],
      "project": "src/**/*.{ts,js}",
      "ignoreDependencies": []
    },
    "packages/scripts": {
      "entry": "src/**/*.{ts,js}",
      "project": "src/**/*.{ts,js}",
      "ignoreDependencies": []
    }
  }
}
