{
  "name": "@conductor/shared-client",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@conductor/shared": "1.0.0",
    "react": "^18.3.1",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^6.0.2",
    "vite-plugin-svgr": "^4.3.0"
  },
  "scripts": {
    "validate": "yarn run validate:lint && yarn run validate:types && yarn run validate:format",
    "validate:lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "validate:types": "yarn workspace @conductor/shared build && yarn workspace @conductor/shared-client build && tsc --noEmit",
    "validate:format": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json,css,svg}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,svg}'",
    "clean": "rm -rf dist/ tsconfig.tsbuildinfo",
    "ci": "rm -rf node_modules/ && yarn install",
    "build": "yarn run clean && yarn workspace @conductor/shared build && tsc --build",
    "test": "echo 'TODO: Implement tests'"
  }
}
