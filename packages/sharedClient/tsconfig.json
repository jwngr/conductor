{
  "include": ["src"],

  // This package consumes the `shared` package.
  "references": [{"path": "../shared"}],

  "compilerOptions": {
    // Target latest ECMAScript.
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"], // Override to include DOM.
    "module": "ESNext",

    // Enable strict type checking.
    "strict": true,

    // Module resolution.
    "moduleResolution": "bundler", // Assume browser environment.
    "esModuleInterop": true, // Allow importing CommonJS modules.
    "isolatedModules": true, // Ensure each file is its own module.
    "resolveJsonModule": true, // Allow importing JSON files.

    // React JSX requires this.
    "jsx": "react-jsx",

    // This project is referenced by other TypeScript projects, so it must be composite.
    "composite": true,

    // Build output.
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,

    // Import aliases.
    "paths": {
      "@shared/*": ["../shared/src/*"],
      // Despite this being in the `sharedClient` package itself, prefer `@sharedClient` imports
      // over `@src`. This makes code valid in any package when copy / pasting.
      "@sharedClient/*": ["./src/*"]
    }
  }
}
