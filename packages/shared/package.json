{
  "name": "@conductor/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {},
  "devDependencies": {
    "vite": "^5.4.10",
    "vite-plugin-svgr": "^4.3.0"
  },
  "scripts": {
    "validate": "npm run validate:lint && npm run validate:types && npm run validate:format",
    "validate:lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "validate:types": "tsc --noEmit",
    "validate:format": "prettier --check 'src/**/*.{js,ts,json,svg}'",
    "format": "prettier --write 'src/**/*.{js,ts,json,svg}'",
    "clean": "rm -rf dist/ tsconfig.tsbuildinfo",
    "ci": "rm -rf node_modules/ && npm install",
    "build": "npm run clean && sed -i.bak '/setCookie(/d' ../../node_modules/@types/request/index.d.ts && tsc && vite build"
  }
}
