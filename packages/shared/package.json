{
  "name": "@conductor/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "date-fns": "^4.1.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.4"
  },
  "scripts": {
    "validate": "bun run validate:lint && bun run validate:types && bun run validate:format",
    "validate:lint": "eslint src",
    "validate:lint:fix": "eslint src --fix",
    "validate:types": "tsc",
    "validate:format": "prettier --check 'src/**/*.{js,ts,json,svg}'",
    "format": "prettier --write 'src/**/*.{js,ts,json,svg}'",
    "clean": "rm -rf dist/ tsconfig.tsbuildinfo",
    "ci": "rm -rf node_modules/ && bun install",
    "build": "bun run clean && tsc --build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && open coverage/index.html"
  }
}
