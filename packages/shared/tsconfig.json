{
  "include": ["src"],
  "compilerOptions": {
    // Target latest ECMAScript.
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",

    // Enable strict type checking.
    "strict": true,

    // Module resolution.
    "moduleResolution": "node", // Don't assume a browser environment.
    "esModuleInterop": true, // Allow importing CommonJS modules.
    "isolatedModules": true, // Ensure each file is its own module.
    "resolveJsonModule": true, // Allow importing JSON files.

    // This project is referenced by other TypeScript projects, so it must be composite.
    "composite": true,

    // Build output.
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,

    // Import aliases.
    "paths": {
      // Despite this being in the `shared` package itself, prefer `@shared` imports over `@src`.
      // This makes code valid in any package when copy / pasting.
      // TODO: Disallow relative imports.
      "@shared/*": ["./src/*"]
    }
  }
}
