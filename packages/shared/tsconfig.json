{
  "include": ["src"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Required since this is a TypeScript referenced project.
    "composite": true,

    // Build output.
    "rootDir": "./src",
    "outDir": "./dist",

    // Import aliases.
    "paths": {
      // Despite this being in the shared package itself, prefer @shared imports over @src. This
      // makes code valid in any package when copy / pasting.
      "@shared/*": ["./src/*"]
    }
  }
}
