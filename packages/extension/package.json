{
  "name": "@conductor/extension",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@conductor/shared": "1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.280",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "vite": "^5.4.10"
  },
  "scripts": {
    "validate": "yarn run validate:lint && yarn run validate:types && yarn run validate:format",
    "validate:lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "validate:types": "yarn workspace @conductor/shared build && sed -i.bak '/setCookie(/d' ../../node_modules/@types/request/index.d.ts && tsc --noEmit",
    "validate:format": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json,css}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css}'",
    "start": "vite",
    "clean": "rm -rf dist/",
    "ci": "rm -rf node_modules/ && yarn install",
    "build": "sed -i.bak '/setCookie(/d' ../../node_modules/@types/request/index.d.ts && yarn workspace @conductor/shared build && vite build",
    "preview": "vite preview"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
