{
  "include": ["src"],

  // This package consumes the `shared` package.
  "references": [{"path": "../shared"}],

  "compilerOptions": {
    // This project is referenced by other TypeScript projects, so it must be composite.
    "composite": true,

    // Target latest ECMAScript.
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",

    // Enable strict type checking.
    "strict": true,

    // Module resolution.
    "moduleResolution": "node", // Don't assume a browser environment.
    "esModuleInterop": true, // Allow importing CommonJS modules.
    "isolatedModules": true, // Ensure each file is its own module.
    "resolveJsonModule": true, // Allow importing JSON files.

    // Build output.
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,

    // Import aliases.
    "paths": {
      "@shared/*": ["../shared/src/*"],
      // Despite this being in the `sharedServer` package itself, prefer `@sharedServer` imports
      // over `@src`. This makes code valid in any package when copy / pasting.
      "@sharedServer/*": ["./src/*"]
    }
  }
}
