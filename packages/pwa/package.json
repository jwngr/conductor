{
  "name": "@conductor/pwa",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@conductor/shared": "1.0.0",
    "@conductor/shared-client": "1.0.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.28.0",
    "styled-components": "^6.1.13",
    "tinykeys": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "source-map-explorer": "^2.5.3",
    "vite": "^6.0.2",
    "vite-plugin-svgr": "^4.3.0"
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/*",
    "validate": "yarn run validate:lint && yarn run validate:types && yarn run validate:format",
    "validate:lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "validate:types": "yarn workspace @conductor/shared-client build && tsc --noEmit",
    "validate:format": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json,css,svg}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,svg}'",
    "start": "vite",
    "clean": "rm -rf dist/",
    "ci": "rm -rf node_modules/ && yarn install",
    "build": "yarn run clean && yarn workspace @conductor/shared-client build && vite build",
    "preview": "vite preview",
    "deploy": "firebase deploy --only hosting",
    "test": "echo 'TODO: Implement tests for PWA'"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
