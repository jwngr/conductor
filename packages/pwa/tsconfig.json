{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override to include DOM.
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "moduleResolution": "bundler", // Vite requires this.
    "jsx": "react-jsx", // React JSX requires this.

    "allowSyntheticDefaultImports": true, // TODO?

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@conductor/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"],
  "references": [{"path": "../shared"}]
}
