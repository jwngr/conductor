{
  "include": ["src"],
  "extends": "../../tsconfig.json",

  // This package consumes some shared packages.
  "references": [{"path": "../shared"}, {"path": "../sharedServer"}],
  "compilerOptions": {
    // Build is handled by esbuild.
    "moduleResolution": "bundler",
    "outDir": "./dist",

    // Import aliases.
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@sharedServer/*": ["../sharedServer/src/*"]
    }
  }
}
