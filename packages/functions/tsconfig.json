{
  "include": ["src"],
  "extends": "../../tsconfig.json",

  // This package consumes the shared package.
  "references": [{"path": "../shared"}],

  "compilerOptions": {
    // Required since this is a TypeScript referenced project.
    "composite": true,

    // Build is handled by esbuild.
    "moduleResolution": "bundler",

    // Import aliases.
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  }
}
