{
  "include": ["src"],
  "extends": "../../tsconfig.json",

  // This package consumes the shared package.
  "references": [{"path": "../shared"}],

  "compilerOptions": {
    // Build is handled by esbuild.
    "moduleResolution": "bundler",
    "noEmit": true,

    // Import aliases.
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  }
}
