{
  "include": ["src"],
  "extends": "../../tsconfig.json",

  // This package consumes the shared package.
  "references": [{"path": "../shared"}],

  "compilerOptions": {
    "baseUrl": ".",

    // Scripts are run via tsx, not compiled.
    "noEmit": true,

    // Import aliases.
    "paths": {
      "@shared/*": ["../shared/src/*"]
    }
  }
}
