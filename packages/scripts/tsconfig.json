{
  "include": ["src"],
  "extends": "../../tsconfig.json",

  // This package consumes the `shared` package.
  "references": [{"path": "../shared"}, {"path": "../sharedServer"}],

  "compilerOptions": {
    // Import aliases.
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src"],
      "@shared/*": ["../shared/src/*"],
      "@sharedServer/*": ["../sharedServer/src/*"]
    }
  }
}
