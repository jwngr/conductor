{
  "name": "conductor",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:pwa": "yarn workspace @conductor/pwa start",
    "start:server": "yarn workspace @conductor/webServer start",
    "lint": "yarn workspaces run lint",
    "lint:shared": "yarn workspace @conductor/shared lint",
    "lint:pwa": "yarn workspace @conductor/pwa lint",
    "lint:scripts": "yarn workspace @conductor/scripts lint",
    "lint:extension": "yarn workspace @conductor/extension lint",
    "lint:functions": "yarn workspace @conductor/functions lint",
    "format": "yarn workspaces run format",
    "clean": "yarn workspaces run clean",
    "clean:shared": "yarn workspace @conductor/shared clean",
    "clean:pwa": "yarn workspace @conductor/pwa clean",
    "clean:scripts": "yarn workspace @conductor/scripts clean",
    "clean:extension": "yarn workspace @conductor/extension clean",
    "clean:functions": "yarn workspace @conductor/functions clean",
    "ci": "yarn install --force",
    "build": "yarn workspaces run build",
    "build:shared": "yarn workspace @conductor/shared build",
    "build:pwa": "yarn workspace @conductor/shared build && yarn workspace @conductor/pwa build",
    "build:scripts": "yarn workspace @conductor/shared build && yarn workspace @conductor/scripts build",
    "build:extension": "yarn workspace @conductor/shared build && yarn workspace @conductor/extension build",
    "build:functions": "yarn workspace @conductor/shared build && yarn workspace @conductor/functions build",
    "firebase:local": "firebase emulators:start",
    "deploy:pwa": "yarn workspace @conductor/shared build && yarn workspace @conductor/pwa deploy",
    "deploy:functions": "yarn workspace @conductor/shared build && yarn workspace @conductor/functions deploy",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:rules:firestore": "firebase deploy --only firestore:rules",
    "deploy:rules:storage": "firebase deploy --only storage",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "update-deps": "npx npm-check-updates -u --packageFile package.json && npx npm-check-updates -u --packageFile \"packages/*/package.json\""
  },
  "dependencies": {
    "firebase": "^11.0.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.9.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
