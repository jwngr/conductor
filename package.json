{
  "name": "conductor",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.5.1",
  "scripts": {
    "start:pwa": "yarn workspace @conductor/pwa start",
    "validate": "yarn workspaces foreach --all -p -t run validate",
    "validate:lint": "yarn workspaces foreach --all -p -t run validate:lint",
    "validate:lint:fix": "yarn workspaces foreach --all -p -t run validate:lint:fix",
    "validate:types": "yarn workspaces foreach --all -p -t run validate:types",
    "validate:format": "yarn workspaces foreach --all -p -t run validate:format",
    "validate:shared": "yarn workspace @conductor/shared validate",
    "validate:sharedClient": "yarn workspace @conductor/shared-client validate",
    "validate:sharedServer": "yarn workspace @conductor/shared-server validate",
    "validate:pwa": "yarn workspace @conductor/pwa validate",
    "validate:scripts": "yarn workspace @conductor/scripts validate",
    "validate:extension": "yarn workspace @conductor/extension validate",
    "validate:functions": "yarn workspace @conductor/functions validate",
    "validate:rssServer": "yarn workspace @conductor/rss-server validate",
    "validate:knip": "knip",
    "format": "yarn workspaces foreach --all -p -t run format",
    "lint:fix": "yarn workspaces foreach --all -p -t run lint:fix",
    "clean": "yarn workspaces foreach --all -p -t run clean",
    "clean:shared": "yarn workspace @conductor/shared clean",
    "clean:sharedClient": "yarn workspace @conductor/shared-client clean",
    "clean:sharedServer": "yarn workspace @conductor/shared-server clean",
    "clean:pwa": "yarn workspace @conductor/pwa clean",
    "clean:scripts": "yarn workspace @conductor/scripts clean",
    "clean:extension": "yarn workspace @conductor/extension clean",
    "clean:functions": "yarn workspace @conductor/functions clean",
    "clean:rssServer": "yarn workspace @conductor/rss-server clean",
    "ci": "rm yarn.lock && yarn install",
    "build": "yarn workspaces foreach --all -p -t run build",
    "build:shared": "yarn workspace @conductor/shared build",
    "build:sharedClient": "yarn workspace @conductor/shared-client build",
    "build:sharedServer": "yarn workspace @conductor/shared-server build",
    "build:pwa": "yarn workspace @conductor/pwa build",
    "build:scripts": "yarn workspace @conductor/scripts build",
    "build:extension": "yarn workspace @conductor/extension build",
    "build:functions": "yarn workspace @conductor/functions build",
    "build:rssServer": "yarn workspace @conductor/rss-server build",
    "firebase:local": "firebase emulators:start",
    "deploy:pwa": "yarn workspace @conductor/pwa deploy",
    "deploy:functions": "yarn workspace @conductor/functions deploy",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:rules:firestore": "firebase deploy --only firestore:rules",
    "deploy:rules:storage": "firebase deploy --only storage",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "update-deps": "npx npm-check-updates -u --packageFile 'package.json' && npx npm-check-updates -u --packageFile 'packages/*/package.json' --reject '@conductor/shared,@conductor/shared-client,@conductor/shared-server' && yarn ci",
    "test": "yarn workspaces foreach --all -p -t run test",
    "test:shared": "yarn workspace @conductor/shared test",
    "test:shared:watch": "yarn workspace @conductor/shared test:watch",
    "test:shared:coverage": "yarn workspace @conductor/shared test:coverage",
    "test:shared:coverage:open": "yarn workspace @conductor/shared test:coverage:open",
    "test:sharedClient": "yarn workspace @conductor/shared-client test",
    "test:sharedClient:watch": "yarn workspace @conductor/shared-client test:watch",
    "test:sharedServer": "yarn workspace @conductor/shared-server test",
    "test:sharedServer:watch": "yarn workspace @conductor/shared-server test:watch",
    "test:pwa": "yarn workspace @conductor/pwa test",
    "test:scripts": "yarn workspace @conductor/scripts test",
    "test:extension": "yarn workspace @conductor/extension test",
    "test:functions": "yarn workspace @conductor/functions test",
    "test:coverage": "yarn workspaces foreach --all -p -t run test:coverage",
    "test:rssServer": "yarn workspace @conductor/rss-server test"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "eslint": "^9.25.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "knip": "^5.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
